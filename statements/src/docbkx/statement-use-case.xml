                                        <para><emphasis role="bold">Indication: </emphasis>Worsening
                                            depression, PTSD</para>
                                    </listitem>
                                </itemizedlist>
                            </listitem>
                        </itemizedlist>
                    </listitem>
                    <listitem>
                        <para><emphasis role="bold">Referral: </emphasis> Supported Housing
                            Services</para>
                        <itemizedlist>
                            <listitem>
                                <para><emphasis role="bold">Topic: </emphasis>Supported Housing
                                    Services</para>
                            </listitem>
                            <listitem>
                                <para>Detail:</para>
                                <itemizedlist>
                                    <listitem>
                                        <para>Category/Type: Referral</para>
                                    </listitem>
                                </itemizedlist>
                            </listitem>
                        </itemizedlist>
                    </listitem>
                </orderedlist>
            </listitem>
